            { topic: "Drillthrough & Tooltips", concepts: ["Report page tooltips", "Detailed drillthrough pages"], description: "Add depth and interactivity to visual reports." },
            { topic: "Bookmarks & Selection Pane", concepts: ["Bookmarks", "Toggle views", "Storytelling"], description: "Create dynamic, interactive reports for presentations." }
          ],
          advanced: [
