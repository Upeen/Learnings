    const overlay = document.getElementById('overlay');
    const closePanelBtn = document.getElementById('closePanelBtn');
    const panelTitle = document.getElementById('panelTitle');
    const beginnerContent = document.getElementById('beginnerContent');
    const intermediateContent = document.getElementById('intermediateContent');
    const advancedContent = document.getElementById('advancedContent');
    const expertContent = document.getElementById('expertSection');
    const searchInput = document.getElementById('searchInput');
    const themeToggle = document.getElementById('themeToggle');

    function populateCards(filter = '') {
      cardContainer.innerHTML = '';
      const filteredRoadmaps = roadmaps.filter(item =>
        item.title.toLowerCase().includes(filter.toLowerCase()) ||
        item.description.toLowerCase().includes(filter.toLowerCase())
      );
      
      filteredRoadmaps.forEach((item, idx) => {
        const card = document.createElement('div');
        card.className = 'card';
        card.tabIndex = 0;
        card.setAttribute('role', 'button');
        card.setAttribute('aria-pressed', 'false');
        card.setAttribute('aria-label', `View details about ${item.title}`);
        card.innerHTML = `
          <div class="card-content">
            <img src="${item.image}" alt="${item.title} icon" class="role-icon-img" onerror="this.src='https://via.placeholder.com/36?text=Image+Not+Found'; this.alt='Image Not Found';" />
            <div>
              <h3>${item.title}</h3>
              <p>${item.description}</p>
            </div>
          </div>
        `;
        card.addEventListener('click', () => openPanel(roadmaps.indexOf(item)));
        card.addEventListener('keydown', (e) => {
          if (e.key === 'Enter' || e.key === ' ') {
            e.preventDefault();
            openPanel(roadmaps.indexOf(item));
          }
        });
        cardContainer.appendChild(card);
      });
    }

    function openPanel(index) {
      currentPanelIndex = index;
      const item = roadmaps[index];
      panelTitle.innerHTML = `
        <img src="${item.panelImage}" alt="${item.title}" class="role-header-img" onerror="this.src='https://via.placeholder.com/48?text=Image+Not+Found'; this.alt='Image Not Found';" />
        <span>${item.title}</span>
      `;
      
      beginnerContent.innerHTML = '';
      if (item.levels.beginner) {
        const table = document.createElement('table');
        table.innerHTML = `
          <tr><th>No.</th><th>Topic</th><th>Key Concepts</th><th>Description</th></tr>
          ${item.levels.beginner.map((section, i) => `
            <tr>
              <td>${i + 1}</td>
              <td class="topic-cell">${section.topic}</td>
              <td>${section.concepts.join(', ')}</td>
              <td>${section.description}</td>
            </tr>
          `).join('')}
        `;
        beginnerContent.appendChild(table);
      }

      intermediateContent.innerHTML = '';
      if (item.levels.intermediate) {
        const table = document.createElement('table');
        table.innerHTML = `
          <tr><th>No.</th><th>Topic</th><th>Key Concepts</th><th>Description</th></tr>
          ${item.levels.intermediate.map((section, i) => `
            <tr>
              <td>${i + 9}</td>
              <td class="topic-cell">${section.topic}</td>
              <td>${section.concepts.join(', ')}</td>
              <td>${section.description}</td>
            </tr>
          `).join('')}
        `;
        intermediateContent.appendChild(table);
      }

      advancedContent.innerHTML = '';
      if (item.levels.advanced) {
        const table = document.createElement('table');
        table.innerHTML = `
          <tr><th>No.</th><th>Topic</th><th>Key Concepts</th><th>Description</th></tr>
          ${item.levels.advanced.map((section, i) => `
            <tr>
              <td>${i + 17}</td>
              <td class="topic-cell">${section.topic}</td>
              <td>${section.concepts.join(', ')}</td>
              <td>${section.description}</td>
            </tr>
          `).join('')}
        `;
        advancedContent.appendChild(table);
      }

      expertContent.style.display = item.levels.expert ? 'block' : 'none';
      expertContent.querySelector('.modal-section-content').innerHTML = '';
      if (item.levels.expert) {
        const table = document.createElement('table');
        table.innerHTML = `
          <tr><th>No.</th><th>Topic</th><th>Key Concepts</th><th>Description</th></tr>
          ${item.levels.expert.map((section, i) => `
            <tr>
              <td>${i + 25}</td>
              <td class="topic-cell">${section.topic}</td>
              <td>${section.concepts.join(', ')}</td>
              <td>${section.description}</td>
            </tr>
          `).join('')}
        `;
        expertContent.querySelector('.modal-section-content').appendChild(table);
      }

      modalPanel.classList.add('open');
      overlay.classList.add('visible');
      modalPanel.focus();
    }

    function closePanel() {
      modalPanel.classList.remove('open');
      overlay.classList.remove('visible');
      cardContainer.querySelector('.card')?.focus();
    }

    // Theme toggle
    themeToggle.addEventListener('click', () => {
      document.body.classList.toggle('light-mode');
      themeToggle.textContent = document.body.classList.contains('light-mode') ? 'üåô' : '‚òÄÔ∏è';
      themeToggle.setAttribute('aria-label', document.body.classList.contains('light-mode') ? 'Switch to dark mode' : 'Switch to light mode');
    });

    // Search functionality
    searchInput.addEventListener('input', () => {
      populateCards(searchInput.value);
    });

    // Keyboard navigation
    closePanelBtn.addEventListener('click', closePanel);
    overlay.addEventListener('click', closePanel);
    document.addEventListener('keydown', e => {
      if (e.key === 'Escape' && modalPanel.classList.contains('open')) {
        closePanel();
      }
    });

    populateCards();
